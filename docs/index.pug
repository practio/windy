include ../pug/windy.pug

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Windy | Practio ♥ Tailwind
    meta(name="description" content="Practio ♥ Tailwind")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href="../css/windy.css")
    link(rel="stylesheet" href="https://rsms.me/inter/inter.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.5.6/dialog-polyfill.min.css")
  body(class="font-sans bg-sky-light")
    main.bg-sky-lightest
      +container
        +heading1.mb-1 Windy
        +paragraph.mb-8 Practio ♥ Tailwind...

        include ./sections/_avatars.pug
        include ./sections/_badges.pug
        include ./sections/_buttons.pug
        include ./sections/_callouts.pug
        include ./sections/_dialogs.pug
        include ./sections/_forms.pug
        include ./sections/_headings.pug
        include ./sections/_icons.pug
        include ./sections/_modals.pug
        include ./sections/_util.pug

        +section
          +heading2.mb-1 Examples
          +paragraph.mb-8 A full page with a header, paragraph and form.
          +example
            +narrowContainer("main")
              +heading1.mb-1(size=3) New Thing
              +paragraph.mb-8 Create a new thing.
              +form(action="" method="POST")
                +fieldset
                  +textInputField(
                    id="field1"
                    label="Field 1"
                    maxlength="5"
                    name="authorizationId"
                    pattern="[0-9A-Z]{5}"
                    placeholder="AB123"
                    type="text"
                  )
                  +textInputField(
                    id="field2"
                    label="Field 2"
                    maxlength="10"
                    name="cpr"
                    pattern="[0-9]{10}"
                    placeholder="1507841121"
                    type="text"
                  )
                +button.w-full(kind="primary" size="large" type="submit")
                  +solidIcon("plus-sm")
                  | Create new thing
          
script(src="../js/windy.js")
script(src="https://cdnjs.cloudflare.com/ajax/libs/dialog-polyfill/0.5.6/dialog-polyfill.min.js")
script.
    document
      .querySelectorAll('dialog')
      .forEach(dialog => dialogPolyfill.registerDialog(dialog));

//- ATOMS
mixin form
  form(class="flex flex-col gap-y-3")&attributes(attributes)
    block

mixin fieldset
  fieldset(class="mt-4")&attributes(attributes)
    legend(class="sr-only")= attributes.legend
    block

mixin fieldset-heading
  h4(class="text-base font-medium text-ink")
    block

mixin fieldset-subheading
  p(class="text-sm leading-5 text-ink-lighter")
    block

mixin label
  label(class="label")&attributes(attributes)
    block

mixin field
  - const { direction = "vertical" } = attributes;
  case direction
    when "vertical"
      div(class="flex flex-col gap-y-1")&attributes(attributes)
        block
    when "horizontal"
      div(class="flex gap-x-2")&attributes(attributes)
        block

mixin field-description
  div&attributes(attributes)
    block

mixin input
  input&attributes(attributes)

mixin select
  select(class="form form-select")&attributes(attributes)
    
mixin option
  option&attributes(attributes)
    block

mixin text-input
  input(type="text" class="form form-field")&attributes(attributes)

mixin radio-input
  input(type="radio" class="form")&attributes(attributes)

mixin checkbox-input
  input(type="checkbox" class="form rounded text-red")&attributes(attributes)


//- MOLECULES
mixin text-input-field
  +field
    +label(for=attributes.id)= attributes.label
    +text-input&attributes(attributes)

mixin email-input-field
  +field
    +label(for=attributes.id)= attributes.label
    +text-input&attributes(attributes)

mixin radio-input-field
  +field(direction="horizontal")
    +radio-input&attributes(attributes)
    div
      +label(for=attributes.id)= attributes.label
      +field-description= attributes.description

mixin checkbox-input-field
  +field(direction="horizontal")
    +checkbox-input(class="mt-px")&attributes(attributes)
    div
      +label(for=attributes.id)= attributes.label
      +field-description= attributes.description

mixin select-field
  +field
    +label(for=attributes.id)= attributes.label
    +select&attributes(attributes)
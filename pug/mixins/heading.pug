mixin heading
  - const { size = 1 } = attributes;
  case size
    when 1
      h1(class="text-2xl font-semibold text-gray-900")&attributes(attributes)
        block
    when 2
      h2(class="text-xl font-semibold text-gray-900")&attributes(attributes)
        block
    when 3
      h3(class="text-lg font-semibold text-gray-900")&attributes(attributes)
        block
    when 4
      h4(class="text-md font-semibold text-gray-900")&attributes(attributes)
        block
    when 5
      h5(class="text-sm font-semibold text-gray-900")&attributes(attributes)
        block
    when 6
      h6(class="text-xs font-semibold text-gray-900")&attributes(attributes)
        block
{
  "name": "@practio/windy",
  "version": "0.1.0",
  "description": "Practio TailwindCSS Components",
  "scripts": {
    "start": "parcel ./src/pug/index.pug --port 8585",
    "dev": "npm-run-all --parallel dev:*",
    "dev:css": "tailwindcss -i ./src/css/tailwind.css -o dist/css/tailwind.css --watch",
    "build": "npm-run-all build:css build:parcel",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o dist/css/tailwind.css --minify",
    "build:parcel": "parcel build ./src/pug/windy.pug --dist-dir ./dist --no-content-hash"
  },
  "devDependencies": {
    "@parcel/transformer-html": "^2.0.0",
    "@parcel/transformer-posthtml": "^2.0.0",
    "@parcel/transformer-pug": "^2.0.0",
    "autoprefixer": "^10.3.7",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "postcss": "^8.3.11",
    "tailwindcss": "^2.2.17"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.4"
  }
}

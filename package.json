{
  "name": "parcel-pug",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "parcel ./src/pug/index.pug --port 8080",
    "dev": "npm-run-all --parallel dev:*",
    "dev:serve": "node bin/dev.js",
    "dev:css": "tailwindcss -i ./src/css/tailwind.css -o dist/css/tailwind.css --watch",
    "build": "parcel build ./src/pug/index.pug",
    "build:css": "tailwindcss -i ./src/css/tailwind.css -o dist/css/tailwind.css --minify"
  },
  "devDependencies": {
    "@parcel/transformer-html": "^2.0.0",
    "@parcel/transformer-posthtml": "^2.0.0",
    "@parcel/transformer-pug": "^2.0.0",
    "autoprefixer": "^10.3.7",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "postcss": "^8.3.11",
    "tailwindcss": "^2.2.17"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.4"
  }
}
